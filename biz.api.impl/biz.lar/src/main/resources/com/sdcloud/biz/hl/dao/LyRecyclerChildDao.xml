		lrc.weight1, lrc.weight2, lrc.weight3, lrc.weight4, lrc.weight5,
		lrc.weight6, lrc.weight7, lrc.weight8, lrc.weight9, lrc.use_number,
		lrc.flush_time, lrc.create_date
