		#{item.weight8,jdbcType=INTEGER}, #{item.weight9,jdbcType=INTEGER},
		#{item.useNumber,jdbcType=INTEGER}, #{item.flushTime,jdbcType=TIMESTAMP},
		#{item.createDate,jdbcType=TIMESTAMP}
